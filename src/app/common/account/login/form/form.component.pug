form(
    name="loginForm"
    role='form' 
    novalidate
    ng-model-options= "{ updateOn: 'blur default', debounce: {blur: 0, default: 250}}"
)
    fieldset
        .form-group
            input.form-control(
                placeholder='E-mail', 
                name='email', 
                type='email' 
                ng-model="$ctrl.credentials.email",
                required)
            div(ng-messages='loginForm.email.$error' role='alert'  ng-if='loginForm.email.$dirty || loginForm.email.$touched').error-message
                div(ng-message='required') Introduce el email
                div(ng-message='email') Email inválido: example@test.es

        .form-group
            input.form-control(
                placeholder='Password', 
                name='password', 
                type='password', 
                value='',  
                ng-model="$ctrl.credentials.password" 
                required)
            div(ng-messages='loginForm.password.$error' role='alert'  ng-if='loginForm.password.$dirty || loginForm.password.$touched').error-message
                div(ng-message='required') Introduce la contraseña
        input.btn.btn-lg.btn-success.btn-block(
            type='submit', 
            value='Login' 
            ng-disabled="loginForm.$invalid" 
            ng-click="$ctrl.submitForm()"
        )
        p.pull-right.margin-top-register-message Regístrate 
            a(ui-sref="register")
                strong aquí