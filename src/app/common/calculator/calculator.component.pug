.container
  .row
    .col-lg-6.col-md-7.col-xs-12.col-lg-offset-3.col-md-offset-2
      .panel.panel-default
        .panel-heading
          h3.panel-title Calculadora iva
        .panel-body
          form(name='calculatorForm')
            form-calculator(
              base='$ctrl.base'
              total='$ctrl.total'
              iva='$ctrl.iva'
              on-value-changed='$onValueChanged($event)'
            )